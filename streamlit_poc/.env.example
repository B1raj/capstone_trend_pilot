# OpenAI API Key (required for GPT-4 post generation)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required for Claude post generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Twitter/X API Key (optional - for real-time trending topics)
